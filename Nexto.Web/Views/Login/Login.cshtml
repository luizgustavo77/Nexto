@model UserDto

@{
    ViewData["Title"] = "Login";
}

<h1>Olá!</h1>

<h4>Bem vindo de volta!</h4>
<hr />
<div class="row">
    <div class="col-4"></div>

    <form asp-action="Login" class="form-signin col-4">
        <label style=" font-size: 65px; text-align: center; margin-left: 45%;">✒️</label>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <br />
        <label asp-for="Usuario" class="control-label"></label>
        <input asp-for="Usuario" class="form-control" />
        <span asp-validation-for="Usuario" class="text-danger"></span>

        <br />
        <label asp-for="Senha" class="control-label"></label>
        <input asp-for="Senha" type="password" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>

        <br />
        <button type="submit" value="Criar" class="btn btn-lg btn-primary btn-block"> Login </button>
        <br />
        <a class="btn btn-lg btn-block btn-secondary" asp-area="" asp-controller="Login" asp-action="Registro"> Cadastrar </a>
    </form>

</div>

